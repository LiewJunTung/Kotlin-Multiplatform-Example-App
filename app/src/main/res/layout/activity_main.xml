<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <Button
            android:text="Serialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_serialization"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/button_network"/>
    <Button
            android:text="Network call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_network"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_serialization" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/button_database"/>
    <Button
            android:text="Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_database" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_network" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/button_coroutines"/>
    <Button
            android:text="Coroutines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_coroutines" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_database" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>
